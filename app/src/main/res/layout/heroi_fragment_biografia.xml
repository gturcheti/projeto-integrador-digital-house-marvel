<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/heroi_fragment_nome_personagem"
            android:text="Tony Stark"
            android:textSize="20sp"
            android:fontFamily="@font/rubik"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/heroi_fragment_nome_heroi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik"
            android:text="HOMEM DE FERRO"
            android:textColor="@color/marvel_red"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/heroi_fragment_nome_personagem"/>


        <TextView
            android:id="@+id/heroi_fragment_descrição"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BIOGRAFIA DO HEROI"
            android:fontFamily="@font/rubik"
            android:textColor="@color/gray"
            android:textSize="30sp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/heroi_fragment_nome_heroi"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
